# bump: nginx-version /NGINX_VERSION="(.*)"/ https://nginx.org/en/download.html|re:/nginx-([\d.]+)/$1/|semver:*
NGINX_VERSION="1.29.4"

export ZOPEN_STABLE_URL="https://nginx.org/download/nginx-${NGINX_VERSION}.tar.gz"
export ZOPEN_STABLE_DEPS="zoslib make libpcre2 zlib openssl"
export ZOPEN_DEV_URL="https://github.com/nginx/nginx.git"
export ZOPEN_DEV_DEPS="zoslib make libpcre2 zlib openssl"
export ZOPEN_BUILD_LINE="STABLE"

export ZOPEN_CONFIGURE_MINIMAL=Y
#export ZOPEN_CONFIGURE_OPTS="--with-cc=\${CC} --prefix=\${ZOPEN_INSTALL_DIR} --with-ld-opt=\"\$LDFLAGS \$LIBS\" --with-pcre=\"\$PRCE2_HOME\" --with-zlib=\"$ZLIB_HOME\" --with-openssl=\"$OPENSSL_HOME\""
export ZOPEN_CONFIGURE_OPTS="--with-cc=\${CC} --prefix=\${ZOPEN_INSTALL_DIR} --with-ld-opt=\"\$LDFLAGS \$LIBS\" --with-cc-opt=\"\$CPPFLAGS \$CFLAGS\" --without-select_module --with-poll_module --with-http_ssl_module --with-debug"


export ZOPEN_COMP=CLANG
export ZOPEN_MAKE_MINIMAL=Y

export ZOPEN_CHECK="zopen_check"

export ZOPEN_EXTRA_CPPFLAGS="-D_POSIX_C_SOURCE=200809L -D__XPLAT=1 -D_OPEN_SYS_IF_EXT -D_OPEN_SYS_SOCK_EXT3 -D_OPEN_SYS_SOCK_IPV6"

zopen_pre_build()
{
  export CFLAGS="$CFLAGS $CPPFLAGS"
}

zopen_check()
{
  git clone https://github.com/nginx/nginx-tests.git
  cd nginx-tests
  TEST_NGINX_BINARY=../objs/nginx prove .
  cd ..
}

zopen_check_results()
{
  dir="$1"
  pfx="$2"
  chk="$1/$2_check.log"

  # Echo the following information to gauge build health
  echo "actualFailures:0"
  echo "totalTests:1"
  
  echo "expectedTotalTests:1"
}

zopen_append_to_env()
{
  # echo envars outside of PATH, MANPATH, LIBPATH
}

zopen_append_to_setup()
{
  # echo commands that will run when installing via setup.sh
}

zopen_get_version()
{
  # Modify to echo the version of your tool/library
  # Rather than hardcoding the version, obtain the version by running the tool/library
  echo "${NGINX_VERSION}"
}
